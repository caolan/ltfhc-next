{
  "collection": "forms",
  "class": "schema",
  "parent": "visit",
  "_id": "forms/schema/visit/bodilyinjury",
  "formname": "Bodily Injury",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Bodily Injury",
  "properties": {
    "injurydate": {
      "title": "Date of Injury",
      "type": "string",
      "format": "date-time",
      "required": true
    },
    "injurytype": {
      "title": "Type of Injury",
      "type": "string",
      "enum": [
        "animal bite",
        "fracture",
        "concussion or head injury",
        "motor vehicle accident",
        "motorcycle accident",
        "laceration",
        "crash injury",
        "burn",
        "other"
      ]
    },
    "injuryother": {
      "title": "Other Injury",
      "type": "string"
    },
    "testing": {
      "title": "Testing",
      "type": "string"
    },
    "treatment": {
      "title": "Treatment",
      "type": "string",
      "enum": [
        "A",
        "B",
        "C"
      ],
      "required": true
    },
    "admission": {
      "title": "Admission Required?",
      "type": "boolean",
      "enum": [
        true,
        false
      ],
      "default": false,
      "required": true
    },
    "mortality": {
      "title": "Did Injury Lead to death?",
      "type": "boolean",
      "enum": [
        true,
        false
      ],
      "default": false,
      "required": true
    }
  }
}