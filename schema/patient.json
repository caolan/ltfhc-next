{
  "id": "patient",
  "collection" : "forms",
  "class": "schema",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Patient",
  "properties": {
    "firstname": {
      "title": "First Name",
      "type": "string"
    },
    "lastname": {
      "title": "Last Name",
      "type": "string"
    },
    "approxage": {
      "title": "Approximate Age",
      "type": "number",
      "minimum": 0
    },
    "birthday": {
      "title": "Birthday",
      "type": "string",
      "format": "date-time"
    },
    "clinicid": {
      "title": "Clinic ID",
      "type": "string"
    },
    "gender": {
      "enum": [
        "male",
        "female"
      ],
      "title": "Gender",
      "required": true,
      "default": "male"
    },
    "governmentid": {
      "title": "Government ID",
      "type": "string"
    },
    "hivid": {
      "title": "HIV ID",
      "type": "string"
    },
    "phone": {
      "title": "Phone",
      "type": "number"
    },
    "allergies": {
      "title": "Medication Allergies",
      "type": "array",
      "items": {
        "title": "Drug",
        "$ref": "drugs/#druglist"
      }
    }
  }
}